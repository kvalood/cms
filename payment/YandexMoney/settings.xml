<?xml version="1.0" encoding="UTF-8"?>
<module>
	<name>
		Яндекс.Деньги (версия 1.2.1)
	</name>
	<settings>
		<variable>yandex_shopid</variable>
		<name>Идентификатор магазина (Shop ID)</name>
	</settings>
	<settings>
		<variable>yandex_scid</variable>
		<name>Номер витрины (Scid)</name>
	</settings>
	<settings>
		<variable>yandex_password</variable>
		<name>Пароль магазина (shopPassword)</name>
	</settings>
	<settings>
		<variable>yandex_paymode</variable>
		<name>Сценарий оплаты</name>
		<options>
			<name>Выбор оплаты на стороне сервиса Яндекс.Касса</name>
			<value>kassa</value>
		</options>
		<options>
			<name>Выбор оплаты на стороне магазина</name>
			<value>site</value>
		</options>
	</settings>
	<settings>
		<variable>ya_kassa_send_check</variable>
		<name>Отправлять в Яндекс.Кассу данные для чеков (54-ФЗ)</name>
		<options>
			<name>Включить</name>
			<value>1</value>
		</options>
        <options>
            <name>Выключить</name>
            <value>0</value>
        </options>
	</settings>
    <settings>
        <variable>ya_kassa_tax</variable>
        <name>Ставка по умолчанию</name>
        <options>
            <name>Без НДС</name>
            <value>1</value>
        </options>
        <options>
            <name>0%</name>
            <value>2</value>
        </options>
        <options>
            <name>10%</name>
            <value>3</value>
        </options>
        <options>
            <name>18%</name>
            <value>4</value>
        </options>
        <options>
            <name>Рассчётная ставка 10/110</name>
            <value>5</value>
        </options>
        <options>
            <name>Рассчётная ставка 18/118</name>
            <value>6</value>
        </options>
    </settings>
	<settings>
		<variable>yandex_paymenttype</variable>
		<name>Способ оплаты (для режима оплаты с выбором на стороне магазина)</name>
		<options>
			<name>Не задан</name>
			<value></value>
		</options>
		<options>
			<name>Оплата из кошелька в Яндекс.Деньгах</name>
			<value>PC</value>
		</options>
		<options>
			<name>Оплата с произвольной банковской карты</name>
			<value>AC</value>
		</options>
		<options>
			<name>Оплата наличными через кассы и терминалы</name>
			<value>GP</value>
		</options>
		<options>
			<name>Платеж со счета мобильного телефона</name>
			<value>MC</value>
		</options>
		<options>
			<name>Оплата из кошелька в системе WebMoney</name>
			<value>WM</value>
		</options>
		<options>
			<name>Оплата через Альфа-Клик</name>
			<value>AB</value>
		</options>
		<options>
			<name>Оплата через Сбербанк: оплата по SMS или Сбербанк Онлайн</name>
			<value>SB</value>
		</options>
		<options>
			<name>Оплата через MasterPass</name>
			<value>MA</value>
		</options>
		<options>
			<name>Оплата через интернет-банк Промсвязьбанка</name>
			<value>PB</value>
		</options>
		<options>
			<name>Оплата через QIWI Wallet</name>
			<value>QW</value>
		</options>
		<options>
			<name>Оплата через доверительный платеж (Куппи.ру)</name>
			<value>QP</value>
		</options>
		<!--<options>
			<name>Через мобильный терминал (mPOS)</name>
			<value>MP</value>
		</options>-->
	</settings>	
	<settings>
		<variable>yandex_testmode</variable>
		<name>Режим работы</name>
		<options>
			<name>Тестовый режим</name>
			<value>1</value>
		</options>
		<options>
			<name>Рабочий режим</name>
			<value>0</value>
		</options>
	</settings>	
</module>
